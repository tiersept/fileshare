// BUILD TOOLS

/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"

brew install git nvm
npm install -g npm@latest
npm install -g yarn


// APPS

brew install google-chrome telegram dropbox spotify firefox resilio-sync slack vlc deluge discord brave-browser homebrew/cask/docker figma notion insomnia iterm2 sourcetree spectacle visual-studio-code android-platform-tools webtorrent


brew install zsh && sh -c "$(curl -fsSL https://raw.githubusercontent.com/robbyrussell/oh-my-zsh/master/tools/install.sh)"

