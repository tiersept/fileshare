// install brew
/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"


// install NVM
https://github.com/nvm-sh/nvm

// install node
nvm install stable

npm install -g npm@latest
npm install -g yarn


// install APPS
brew install google-chrome telegram dropbox spotify firefox resilio-sync slack vlc deluge discord brave-browser homebrew/cask/docker figma notion insomnia iterm2 sourcetree rectangle visual-studio-code android-platform-tools webtorrent adobe-acrobat-reader adobe-creative-cloud

// install ZSH
brew install zsh && sh -c "$(curl -fsSL https://raw.githubusercontent.com/robbyrussell/oh-my-zsh/master/tools/install.sh)"

// get colorls
https://github.com/athityakumar/colorls#installation

// setup iterm2
https://blog.larsbehrenberg.com/the-definitive-iterm2-and-oh-my-zsh-setup-on-macos
https://github.com/agkozak/zsh-z
